<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FactoresCompuestosFragment">

    <!-- Título del Fragmento -->
    <EditText
        android:id="@+id/et_numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa un número"
        android:inputType="number"
        android:layout_marginTop="16dp"
        android:padding="10dp"/>

    <!-- Botón para calcular los factores -->
    <Button
        android:id="@+id/btn_calcular_factores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Factores"
        android:layout_marginTop="16dp"/>

    <!-- TextView para mostrar si es número compuesto o no -->
    <TextView
        android:id="@+id/tv_composicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text=""
        android:textSize="16sp"/>

    <!-- TextView para mostrar la lista de factores -->
    <TextView
        android:id="@+id/tv_factores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="16sp"/>

</LinearLayout>

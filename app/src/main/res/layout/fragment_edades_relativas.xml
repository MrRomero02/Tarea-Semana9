<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EdadesRelativasFragment">

    <!-- Título del Fragmento -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Cálculo de Edades Relativas"
        android:textSize="20sp"
        android:paddingBottom="20dp"/>

    <!-- EditText para ingresar la edad de Ana -->
    <EditText
        android:id="@+id/et_edad_ana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa la edad de Ana"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <!-- Botón para calcular las edades -->
    <Button
        android:id="@+id/btn_calcular_edades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Edades"
        android:layout_marginBottom="20dp"/>

    <!-- TextView para mostrar el resultado -->
    <TextView
        android:id="@+id/tv_resultado_edades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textSize="16sp"/>

</LinearLayout>
